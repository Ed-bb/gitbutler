{
	"name": "@gitbutler/dependency-analyzer",
	"version": "0.1.0",
	"description": "TypeScript dependency graph analyzer for dead code detection",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "vitest run",
		"test:watch": "vitest --watch",
		"clean": "rm -rf dist",
		"lint": "eslint src --ext .ts",
		"analyze": "node dist/cli.js"
	},
	"keywords": [
		"typescript",
		"dependency-graph",
		"dead-code",
		"analysis",
		"ast"
	],
	"author": "GitButler",
	"license": "MIT",
	"dependencies": {
		"typescript": "catalog:",
		"glob": "^10.3.10",
		"commander": "^11.1.0",
		"chalk": "^5.3.0",
		"comment-json": "^4.2.3"
	},
	"devDependencies": {
		"@types/node": "^20.10.0",
		"vitest": "catalog:",
		"eslint": "^8.56.0",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0"
	},
	"files": [
		"dist",
		"README.md"
	]
}
